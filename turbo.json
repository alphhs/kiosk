{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "lint:fix": {
            "dependsOn": [
                "^lint:fix"
            ]
        },
        "clean": {
            "cache": false
        },
        "codegen": {
            "dependsOn": [
                "^codegen"
            ],
            "outputs": [
                "src/gql/**"
            ]
        }
    },
    "globalDependencies": [
        "**/.env.*local"
    ]
}
